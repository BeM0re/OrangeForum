<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/spacing_normal_16">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/wr_response_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/color_accent"
        app:errorEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/et_response_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Опции"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            tools:text="Content"
            android:backgroundTint="@color/color_background"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/wr_response_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/color_accent"
        app:counterMaxLength="15000"
        app:errorEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/et_response_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_background"
            android:hint="Коммент"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            tools:text="Content" />
    </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/btn_response_add_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_normal_16"
            android:layout_marginTop="@dimen/spacing_normal_16"
            android:backgroundTint="@color/color_accent"
            android:layout_gravity="left"
            android:text="Выбрать фото" />


    <WebView
        android:id="@+id/wv_post_captcha"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="@+id/rv_post_list"
        app:layout_constraintEnd_toEndOf="@+id/rv_post_list"
        app:layout_constraintStart_toStartOf="@+id/rv_post_list"
        app:layout_constraintTop_toTopOf="@+id/rv_post_list"/>

        <Button
            android:id="@+id/btn_response_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_accent"
            android:layout_gravity="right"
            android:text="Отправить" />



</LinearLayout>