<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_op_post_pics"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/spacing_normal_16">

    <ImageView
        android:id="@+id/iv_op_post_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/fuck_warning"
        android:visibility="visible"
        android:paddingBottom="@dimen/spacing_small_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/splash" />

    <ImageView
        android:id="@+id/iv_play_background_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_play_arrow_white_27dp"
        app:layout_constraintStart_toStartOf="@+id/iv_op_post_pic"
        app:layout_constraintTop_toTopOf="@+id/iv_op_post_pic"
        android:layout_marginTop="6dp"
        android:layout_marginStart="5.5dp"
        android:visibility="gone"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/iv_play_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/iv_op_post_pic"
        app:layout_constraintTop_toTopOf="@+id/iv_op_post_pic"
        app:srcCompat="@drawable/ic_play_arrow_accent_24dp"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginLeft="@dimen/spacing_small_8"
        android:visibility="gone"
        tools:visibility="visible"
        android:contentDescription="@string/fuck_warning" />


</androidx.constraintlayout.widget.ConstraintLayout>