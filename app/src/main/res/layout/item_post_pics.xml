<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_op_post_pics"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/spacing_normal_16">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_1_start"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_1_end"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_2_start"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_2_end"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_op_post_pic1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/fuck_warning"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/gl_1_end"
        app:layout_constraintStart_toStartOf="@+id/gl_1_start"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/splash" />


    <ImageView
        android:id="@+id/iv_op_post_pic2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/gl_2_end"
        app:layout_constraintStart_toStartOf="@+id/gl_2_start"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/fuck_warning"
        android:visibility="visible"
        tools:src="@drawable/splash"/>


    <ImageView
        android:id="@+id/iv_play_background_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_play_arrow_white_27dp"
        app:layout_constraintStart_toStartOf="@+id/iv_op_post_pic1"
        app:layout_constraintTop_toTopOf="@+id/iv_op_post_pic1"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="5.5dp"
        android:visibility="gone"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/iv_play_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/iv_op_post_pic1"
        app:layout_constraintTop_toTopOf="@+id/iv_op_post_pic1"
        app:srcCompat="@drawable/ic_play_arrow_accent_24dp"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginLeft="@dimen/spacing_small_8"
        android:visibility="gone"
        tools:visibility="visible"/>


    <ImageView
        android:id="@+id/iv_play_background_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_play_arrow_white_27dp"
        app:layout_constraintStart_toStartOf="@+id/iv_op_post_pic2"
        app:layout_constraintTop_toTopOf="@+id/iv_op_post_pic2"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="5.5dp"
        android:visibility="gone"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/iv_play_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/iv_op_post_pic2"
        app:layout_constraintTop_toTopOf="@+id/iv_op_post_pic2"
        app:srcCompat="@drawable/ic_play_arrow_accent_24dp"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginLeft="@dimen/spacing_small_8"
        android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>